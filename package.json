{
  "name": "@gurusharan3107/mcp-knowledge-graph",
  "version": "0.2.0",
  "type": "module",
  "description": "Simple MCP Knowledge Graph Server with Memvid",
  "main": "dist/mcp-host.js",
  "bin": {
    "knowledge-graph-host": "./dist/mcp-host.js"
  },
  "files": [
    "dist",
    ".next",
    "public",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "dev": "next dev -p 3000",
    "start": "node dist/mcp-host.js",
    "start:dashboard": "next dev -p 3000",
    "build": "tsc --project tsconfig.json && next build",
    "build:server": "tsc --project tsconfig.server.json && chmod +x dist/src/server/mcp-host.js",
    "build:host": "tsc mcp-host.ts --outDir dist --module esnext --target es2022 --moduleResolution bundler --allowSyntheticDefaultImports",
    "lint": "next lint",
    "mcp:host": "node dist/mcp-host.js",
    "mcp:claude": "node dist/mcp-host.js",
    "mcp:cursor": "node dist/mcp-host.js",
    "mcp:cline": "node dist/mcp-host.js",
    "python:start": "python ./python-service/python_memvid_service.py",
    "python:check": "curl -f http://localhost:8000/health || echo 'Python service not running'",
    "setup": "npm install",
    "clean": "rm -rf dist shared_knowledge",
    "start-all": "npm run build:server && npm run start"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.8.0",
    "@radix-ui/react-accordion": "^1.2.3",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-scroll-area": "^1.2.3",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-tooltip": "^1.1.8",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "gsap": "^3.13.0",
    "lucide-react": "^0.487.0",
    "next": "latest",
    "postcss": "^8.5.3",
    "react": "latest",
    "react-dom": "latest",
    "reactflow": "^11.11.4",
    "tailwind-merge": "^3.1.0",
    "tailwindcss": "^3.3.3",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^11.1.0",
    "winston": "^3.11.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "latest",
    "@types/react": "latest",
    "@types/react-dom": "latest",
    "@types/uuid": "^9.0.7",
    "dotenv": "^16.5.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "14.2.4",
    "typescript": "latest"
  }
}
